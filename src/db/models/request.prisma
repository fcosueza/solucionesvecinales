enum RequestState {
  pending
  approved
  denied
}

model Request {
  user      String
  community Int
  state     RequestState @default(pending)

  userID      User      @relation(fields: [user], references: [id], onDelete: Cascade)
  communityID Community @relation(fields: [community], references: [id], onDelete: Cascade)

  @@id([user, community])
}
