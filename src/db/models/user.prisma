enum UserRole {
  tenant
  admin
  webAdmin
}

model User {
  id      String   @id @default(uuid())
  email   String   @unique
  role    UserRole @default(tenant)
  name    String
  surname String

  credentials Credentials?
  incident    Incident[]
  reservation Reservation[]
  request     Request[]

  tenantComm Community[] @relation("admin")
  adminComm  Community[] @relation("tenant")
}
